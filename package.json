{
  "name": "@doitintl/doit-mcp-server",
  "version": "0.1.33",
  "description": "DoiT official MCP Server",
  "keywords": [
    "doit",
    "mcp",
    "mcp-server"
  ],
  "license": "MIT",
  "author": "",
  "type": "module",
  "bin": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "watch": "tsc --watch",
    "test": "vitest run",
    "deploy": "yarn build && npm publish --access public",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --transport stdio",
    "start:sse": "node dist/index.js --transport sse --port 3000",
    "start:sse:custom": "node dist/index.js --transport sse --port 8080 --host 0.0.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22",
    "shx": "^0.3.4",
    "typescript": "^5.7.2",
    "vitest": "^3.1.3"
  },
  "engines": {
    "node": ">=18"
  }
}
